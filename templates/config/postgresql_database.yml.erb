defaults: &defaults
  adapter: postgresql
  template: template0
  host: localhost

development:
  <<: *defaults
  database: <%= app_name %>_development

test:
  <<: *defaults
  min_messages: warning #magic sauce
  database: <%= app_name %>_test

production:
  url:  <%%= ENV['DATABASE_URL'] %>
  pool: <%%= ENV['DB_POOL'] || ENV['MAX_THREADS'] || 3 %>
  reaping_frequency: <%%= ENV['REAPING_FREQUENCY'] || nil %>
